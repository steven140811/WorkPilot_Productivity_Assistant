# LLM Configuration (Required for real LLM calls)
# If not configured, the application will use mock mode
LLM_API_URL=https://your-llm-api-url/v1
LLM_API_KEY=your-api-key-here
LLM_MODEL=your-llm-model-here

# DeepSeek API Configuration (Optional - if using DeepSeek directly)
# When DEEPSEEK_API_KEY is set, it will be used instead of LLM_API_URL/LLM_API_KEY
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Optional: LLM timeout and retry settings
LLM_TIMEOUT=30
LLM_RETRY=2

# Flask Configuration
PORT=5001
FLASK_DEBUG=false
